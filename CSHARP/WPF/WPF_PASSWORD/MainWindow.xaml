<Window x:Class="WPF_PASSWORD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PASSWORD"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="400">
    <Grid>
        <Canvas>
            <TextBlock Text="Password: " FontSize="20" Canvas.Left="20" Canvas.Top="25" Foreground="Orange"/>
            <PasswordBox Width="150" Height="30" Canvas.Right="80" Canvas.Top="20"/>
        </Canvas>

    </Grid>
</Window>
