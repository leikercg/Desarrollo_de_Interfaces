<Window x:Class="Wpf_binding2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_binding2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <StackPanel+-
            >
            <TextBox Name="tbValorNumerico" Width="100" Margin="200" Text="{Binding ElementName=sldPosicion, Path=Value, Mode=TwoWay}"/>
            <Slider Name="sldPosicion" Width="400" Minimum="0" Maximum="100" />
         </StackPanel>    
    </Grid>
    
</Window>
